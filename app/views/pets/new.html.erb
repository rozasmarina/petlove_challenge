<div class="container mt-4 pt-3">
  <div class="row d-flex  justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-8 col-8">
      <h2 class="justify-content-center mb-3">Novo pet</h2>
        <%= simple_form_for [@owner, @pet] do |f| %>
          <%= f.input :name, label: 'Nome' %>
          <%= f.input :monthly_cost, label: 'Custo mensal' %>
          <%= f.input :pet_type, label: 'Tipo de pet' %>
          <%= f.button :submit, "Adicionar", class: 'btn btn-outline-secondary' %>
        <% end %>
    </div>
  </div>
</div>
