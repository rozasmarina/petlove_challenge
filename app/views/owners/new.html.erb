<div class="container mt-5">
  <div class="row d-flex  justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-8 col-8">
      <h2 class="justify-content-center mb-3">Novo dono de pet</h2>
      <%= simple_form_for @owner do |f| %>
        <%= f.input :name, label: 'Nome' %>
        <%= f.input :document, label: 'Documento' %>
        <%= f.input :birthday, label: 'Data de nascimento' %>
        <%= f.button :submit, "Adicionar", class: 'btn btn-outline-primary' %>
      <% end %>
    </div>
  </div>
</div>


